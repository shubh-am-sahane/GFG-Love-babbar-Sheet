public:
    void sort012(int a[], int n)
    {
        // code here
         int c0=0;
        int c1=0;
        for(int i=0;i<n;i++){
            if(a[i]==0){
                c0++;
            }
            if(a[i]==1){
                c1++;
            }
        }
        for(int i=0;i<c0;i++){
            a[i]=0;
        }
        for(int i=c0;i<c0+c1;i++){
            a[i]=1;
        }
        for(int i=c0+c1;i<n;i++){
            a[i]=2;
        }

            
        
    }
